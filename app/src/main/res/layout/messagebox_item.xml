<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@color/black"
    android:id="@+id/id_background">
    <RelativeLayout
        android:background="#00BCD4"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="8dp">

        <!-- pp eklenebilir  -->
        <TextView
            android:id="@+id/text_view_senderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bariol_regular"
            android:maxLines="1"
            android:text="User Name"
            android:textSize="22dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_MessageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_senderName"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:maxLines="1"
            android:text="MessageContent"
            android:textSize="18dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/bariol_regular"/>
        <TextView
            android:id="@+id/text_view_MessageDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:gravity="right|center_vertical"
            android:fontFamily="@font/bariol_regular"
            android:text="MessageDate" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>